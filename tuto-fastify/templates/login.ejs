<%- include('./shared/header.ejs', { title : "Se connecter"}) %> 

<div class="container">

    <% if (locals.error) { %> 
        <div class="alert alert-danger">
            <%= error %> 
        </div>
    <% } %> 

    <div class="card mt-2">
        <div class="card-body">

            <form action="" method="post">
                <div class="form-group">
                    <label for="username">Nom utilisateur</label>
                    <input type="text" id="username" name="username" class="form-control" value="<%= locals.username ?? '' %> ">
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="text" id="password" name="password" class="form-control">
                </div>
                <button class="mt-3 btn btn-primary">Se connecter</button>
            </form>

        </div>
    </div>

</div>

<%- include('./shared/footer.ejs') %> 